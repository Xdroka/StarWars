<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.fragments.FilmDetailsFragment">

        <ImageView
                android:id="@+id/filmDetailsImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginEnd="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="64dp"
                android:contentDescription="@string/films_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic[10]"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewBerkshire.size18sp.Bold"
                android:id="@+id/titleFilmDetailsTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/filmDetailsImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Star Wars 4"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewCreteRound.Size20sp"
                android:id="@+id/directorDetailsFilmTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/titleFilmDetailsTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Diretor: Fulano"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewCreteRound.Size20sp"
                android:id="@+id/producerDetailsFilmTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/directorDetailsFilmTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Produtor: AASDAS"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewCreteRound.Size20sp"
                android:id="@+id/dateFilmDetailsTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/producerDetailsFilmTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Data de LanÃ§amento: 20 de Jan de 2019"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>