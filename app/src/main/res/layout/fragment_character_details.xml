<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context=".ui.fragments.CharacterDetailsFragment">

    <ImageView
            android:id="@+id/characterDetailsImageView"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:contentDescription="@string/characters_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars[13]"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewBerkshire.size18sp.Bold"
            android:id="@+id/nameCharDetailsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/characterDetailsImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Amelia"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewCreteRound.Size20sp"
            android:id="@+id/genderCharDetailsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameCharDetailsTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Genero: Feminino"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewCreteRound.Size20sp"
            android:id="@+id/heightCharDetailsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genderCharDetailsTv"
            tools:text="Altura: 178cm"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewCreteRound.Size20sp"
            android:id="@+id/massCharDetailsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heightCharDetailsTv"
            tools:text="Massa: 60kg"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewCreteRound.Size20sp"
            android:id="@+id/homeWorldCharDetailsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/massCharDetailsTv"
            tools:text="Planeta Natal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>