<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itemSpecieImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars[2]"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewBerkshire.size18sp.Bold"
            android:id="@+id/itemSpecieNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/itemSpecieImageView"
            app:layout_constraintStart_toEndOf="@+id/itemSpecieImageView"
            tools:text="Hutt" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemSpecieClassTv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/itemSpecieImageView"
            app:layout_constraintTop_toBottomOf="@+id/itemSpecieNameTv"
            tools:text="Classification: Gastropod"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemSpecieLanguageTv"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/itemSpecieImageView"
            app:layout_constraintTop_toBottomOf="@+id/itemSpecieClassTv"
            app:layout_constraintBottom_toBottomOf="@+id/itemSpecieImageView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Language: Huttese"/>

</androidx.constraintlayout.widget.ConstraintLayout>