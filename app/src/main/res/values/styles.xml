<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextViewBerkshire">
        <item name="android:fontFamily">@font/berkshire_swash</item>
    </style>
    <style name="TextViewBerkshire.size18sp">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextViewBerkshire.size18sp.White">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextViewBerkshire.size18sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RecyclerViewDefault">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="TextViewCreteRound">
        <item name="android:fontFamily">@font/crete_round</item>
    </style>
    <style name="TextViewCreteRound.Size20sp">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
